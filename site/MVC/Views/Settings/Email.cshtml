@model SettingsEmailModel
@{
	ViewBag.Title = Context.Translate("EmailSettings");
	Layout = "~/Views/Shared/Layouts/_Form.cshtml";

	ViewBag.FormSizeSm = 8;
	ViewBag.FormSizeLg = 6;

	var hl = new WizardHL()
		.AddBox("Email", 0)
		.AddBox("Password", 1)
		.AddBox("Settings", 4)
		.AddBox("SettingsPassword", 4)
		;

	ViewBag.SettingsMenuClass = hl["Settings"];
	ViewBag.SettingsPasswordMenuClass = hl["SettingsPassword"];
}

<div class="form-group @hl["Email"]">
	@Html.LabelFor(m => m.Email, Context.Translate("EmailToChange"), new { @class = "control-label" })
	@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
</div>

<div class="form-group @hl["Password"]">
	@Html.LabelFor(m => m.CurrentPassword, Context.Translate("CurrentPassword"), new { @class = "control-label" })
	@Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit"
			class="btn btn-success tab-submit">
		@Context.Translate("Save")
	</button>
}
