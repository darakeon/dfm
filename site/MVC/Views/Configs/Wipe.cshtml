@model ConfigsWipeModel
@{ ViewBag.Title = Context.Translate("WipeSettings");
	Layout = "~/Views/Shared/Layouts/_Form.cshtml";

	ViewBag.FormSizeSm = 8;
	ViewBag.FormSizeLg = 6; }

<h2 class="text-danger text-center">
	@Context.Translate("Wipe_Title")
</h2>

<p class="text-center">
	@Context.Translate("Wipe_What")
</p>
<p class="text-center">
	@Context.Translate("Wipe_NoLogin")
</p>
<p class="text-center">
	@Context.Translate("Wipe_Deadline")
</p>
<p class="text-center text-uppercase">
	@Context.Translate("Wipe_NoWayBack")
</p>
<p class="text-center">
	@Context.Translate("Wipe_ReadTerms")
	@Html.ActionLink(
		Context.Translate("ContractTitle"),
		"Contract", "Users",
		null, new { target = "_blank" }
	).
</p>
<p class="text-center">
	@Context.Translate("Wipe_GoAhead")
</p>

<div class="form-group">
	@Html.LabelFor(m => m.Password, Context.Translate("CurrentPassword"), new { @class = "control-label" })
	@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit"
			class="btn btn-danger tab-submit">
		@Context.Translate("Wipe")
	</button>
}
