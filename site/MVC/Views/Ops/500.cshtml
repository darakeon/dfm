@using DFM.Email
@model OpsCodeModel

@{
	ViewBag.Title = Context.Translate("Ops");
	Layout = "~/Views/Shared/Layouts/_Result.cshtml";

	var messageKey = Model.EmailSent == Error.Status.Sent
		? "InternalMessageSent"
		: "InternalMessageNotSent";

	ViewBag.Style = "danger";
}

@(Context.Translate(messageKey))

