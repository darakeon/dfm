@{
	ViewBag.Title = Translator.Dictionary["LegendTitle"];
	Layout = "~/Views/Shared/_Table.cshtml";

	ViewBag.HasContent = true;
	ViewBag.TableLgSize = 8;
}

@section TableHeader {
	<tr>
		<th class="text-center">@Translator.Dictionary["Icon"]</th>
		<th>@Translator.Dictionary["Meaning"]</th>
	</tr>
}

@{
	var icons = new Dictionary<String, String> {
		{ "plus", Translator.Dictionary["Create"] },
		{ "edit", Translator.Dictionary["Edit"] },
		{ "trash", Translator.Dictionary["Delete"] },
		{ "calendar", Translator.Dictionary["OpenCalendar"] },
		{ "ok", Translator.Dictionary["Move", "Check"] },
		{ "remove", Translator.Dictionary["Move", "Uncheck"] },
		{ "exclamation-sign", Translator.Dictionary["Move", "Checked"] },
		{ "question-sign", Translator.Dictionary["Move", "Unchecked"] },
		{ "thumbs-up", Translator.Dictionary["Account", "GreenLimit"] },
		{ "adjust", Translator.Dictionary["Account", "YellowLimit"] },
		{ "thumbs-down", Translator.Dictionary["Account", "RedLimit"] },
		{ "ban-circle", Translator.Dictionary["Account", "NoneLimit"] },
		{ "eye-close", Translator.Dictionary["Disable"] },
		{ "eye-open", Translator.Dictionary["Enable"] },
		{ "fire", Translator.Dictionary["IssueTracker"] },
		{ "home", Translator.Dictionary["Home"] },
		{ "cog", Translator.Dictionary["Settings"] },
		{ "off", Translator.Dictionary["Logoff"] },
		{ "transfer", Translator.Dictionary["Transfer"] },
		{ "plus-sign", Translator.Dictionary["In"] },
		{ "minus-sign", Translator.Dictionary["Out"] },
		{ "info-sign", Translator.Dictionary["Info"] },
	};
}

@foreach(var key in icons.Keys)
{
	<tr>
		<td class="text-center">
			<span class="glyphicon glyphicon-@key" title="@icons[key]"></span>
		</td>
		<td>
			@icons[key]
		</td>
	</tr>
}

