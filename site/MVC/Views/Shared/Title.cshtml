@using DFM.MVC.Areas.Account.Models
@model BaseSiteModel

@{
	var accountModel = Model as BaseAccountModel;

	if (ViewBag.Title == null)
	{
		@("Don't fly Money")
	}
	else
	{
		var title = new List<String> {"DfM"};

		if (accountModel != null)
		{
			title.Add(accountModel.Account.Name.ToUpper());
		}

		title.Add(ViewBag.Title);

		@String.Join(" - ", title)
	}
}
