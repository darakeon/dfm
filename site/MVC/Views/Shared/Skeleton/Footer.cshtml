@using DFM.MVC.Areas.Api.Helpers
@{
	var newRoute = new Default.Mobile();

	var currentRouteValues = ViewContext.RouteData.Values;

	var controller = currentRouteValues["Controller"];
	var action = currentRouteValues["Action"];
	var activity = MobileUrls.Get[controller, action];

	var area = newRoute.Area;
	var accountUrl = currentRouteValues["AccountUrl"];
	var id = currentRouteValues["id"];

	var newRouteValues = new {activity, area, accountUrl, id};
}

<footer class="container">
	<hr />

	<div class="row">

		<div class="col-lg-1 col-sm-2">
			<a href="@Url.RouteUrl(newRoute.Name, newRouteValues)"
			   target="_blank" class="android-link" title="@Context.Translate("Aria_AndroidLink")"></a>
		</div>

		<div class="col-lg-4 col-sm-6">
			<small>@Context.Translate("AndroidRobotLicenseText")</small>
		</div>

		<div class="col-lg-7 col-sm-4 text-right">
			Don't fly Money<br/>

			@Html.RouteLink(
				Context.Translate("ContractTitle"),
				area,
				new { controller = "Users", action = "Contract"},
				new { target = "_blank" }
			)<br />

			@Cfg.Version<br/>

			2011<br />
		</div>

	</div>
</footer>
