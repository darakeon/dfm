@model BaseSiteModel

@{
	var tip = Model.Tip;

	var mainRoute = new Default.Main();

	var links = new Dictionary<String, String>
	{
		{ 
			TipBrowser.DeleteLogins.ToString(),
			Url.RouteUrl(mainRoute.Name, new { controller = "Logins", action = "Index" })
		}
	};
}

@if (tip != null)
{
	<aside class="tip">
		<img src="~/Assets/images/pig.svg" 
		    alt="@Context.Translate(tip)"
		    title="@Context.Translate(tip)" />

		<div class="baloon">
			<a href="@links[tip]">
				@Context.Translate(tip)
			</a>
			<button class="tip-close">
				@Context.Translate("Close")
			</button>
		</div>
	</aside>
}
