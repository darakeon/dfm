@model ValueWithSign
@using DFM.Language.Extensions

@{
	var value = (Model.Value < 0 ? -Model.Value : Model.Value)
		.ToMoney(Model.Language, Model.DifferentIfZero);

	var nature = Model.Nature ??
	    (Model.Value > 0 ? MoveNature.In : MoveNature.Out);

	var className = await Html.PartialAsync("Extensions/NatureColor", nature);

	var title = Context.Translate(nature.ToString());
}

<span class="text-@className" title="@title">
	<span class="@await Html.PartialAsync("Extensions/NatureIcon", nature)"></span>
	@value
</span>
