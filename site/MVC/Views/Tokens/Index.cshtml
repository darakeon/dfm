@model TokensIndexModel

@{
	ViewBag.Title = Context.Translate("TokenReceivedByEmail");
	Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Token, Context.Translate("Token"), new { @class = "control-label" })
	@Html.TextBoxFor(m => m.Token, new { @class = "form-control" })
</div>

<div class="form-group">
	@Html.LabelFor(m => m.SecurityAction, Context.Translate("SecurityAction"), new { @class = "control-label" })
	@Html.DropDownListFor(m => m.SecurityAction, Model.SecurityActionList, "-- " + Context.Translate("Select") + " --", new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit" class="btn btn-success">
		@Context.Translate("Go")
	</button>
}
