@model TokensIndexModel

@{
	ViewBag.Title = Translator.Dictionary["TokenReceivedByEmail"];
	Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Token, Translator.Dictionary["Token"], new { @class = "control-label" })
	@Html.TextBoxFor(m => m.Token, new { @class = "form-control" })
</div>

<div class="form-group">
	@Html.LabelFor(m => m.SecurityAction, Translator.Dictionary["SecurityAction"], new { @class = "control-label" })
	@Html.DropDownListFor(m => m.SecurityAction, Model.SecurityActionList, "-- " + Translator.Dictionary["Select"] + " --", new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit" class="btn btn-success">
		@Translator.Dictionary["Go"]
	</button>
}
