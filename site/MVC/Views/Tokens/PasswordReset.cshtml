@model TokensPasswordResetModel

@{
	ViewBag.Title = Context.Translate("PasswordReset");
	Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Password, Context.Translate("Password"), new { @class = "control-label" })
	@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
</div>

<div class="form-group">
	@Html.LabelFor(m => m.RetypePassword, Context.Translate("RetypePassword"), new { @class = "control-label" })
	@Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit" class="btn btn-success">
		@Context.Translate("Reset")
	</button>
}
