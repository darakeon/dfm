@model UsersConfigModel

@Html.HiddenFor(m => m.ThemeOpt.Theme, new { @class = "theme-changer-hidden" })

<div class="well well-sm text-center">
	@Translator.Dictionary["ThemeInstruction"]<br /><br />
	@Html.Raw(
		Translator.Dictionary["ThemeLink"]
			.Replace(
				"{{link}}",
				"<a href='https://bootswatch.com' target='_blank'>Bootswatch</a>"
			)
	)
</div>

<div class="row">
	<div class="col-lg-3 col-sm-3 text-center">
		<div class="btn-group-vertical btn-group-sm">
			@foreach (var theme in Model.ThemeOpt.ThemeList)
			{
				<button class="btn btn-sm btn-default theme-changer @(theme == Model.Theme ? "active" : "")"
				        data-theme="@theme" type="button">
					@theme
				</button>
			}
		</div>
	</div>

	<div class="col-lg-9 col-sm-9 text-center">

		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="text-center">@Translator.Dictionary["Header"]</th>
					<th class="text-center">@Translator.Dictionary["Header"]</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="text-center">@Translator.Dictionary["RowPositive"]</td>
					<td class="text-center text-info">@(1m.ToMoney(Model.Language))</td>
				</tr>
				<tr>
					<td class="text-center">@Translator.Dictionary["RowTransfer"]</td>
					<td class="text-center text-success">@(1m.ToMoney(Model.Language))</td>
				</tr>
				<tr>
					<td class="text-center">@Translator.Dictionary["RowNegative"]</td>
					<td class="text-center text-danger">@(1m.ToMoney(Model.Language))</td>
				</tr>
			</tbody>
		</table>

		<div class="form-group well">
			<label class="control-label">@Translator.Dictionary["Label"]</label>
			<input class="form-control" />
		</div>

		<div class="form-group">
			<button class="btn btn-success">@Translator.Dictionary["Button"]</button>
			<button class="btn btn-warning">@Translator.Dictionary["Button"]</button>
			<button class="btn btn-danger">@Translator.Dictionary["Button"]</button>
		</div>

		<div class="alert alert-info">@Translator.Dictionary["Alert"]</div>
		<div class="alert alert-success">@Translator.Dictionary["Alert"]</div>
		<div class="alert alert-warning">@Translator.Dictionary["Alert"]</div>
		<div class="alert alert-danger">@Translator.Dictionary["Alert"]</div>

	</div>

</div>
