@using DFM.Language.Extensions
@model UsersConfigModel

@Html.HiddenFor(m => m.ThemeOpt.Theme, new { @class = "theme-changer-hidden" })

<div class="well well-sm text-center">
	@Context.Translate("ThemeInstruction")<br /><br />
	@Html.Raw(
		Context.Translate("ThemeLink")
			.Replace(
				"{{link}}",
				"<a href='https://bootswatch.com' target='_blank'>Bootswatch</a>"
			)
	)
</div>

<div class="row">
	<div class="col-lg-3 col-sm-3 text-center">
		<div class="btn-group-vertical btn-group-sm">
			@foreach (var theme in Model.ThemeOpt.ThemeList)
			{
				<button class="btn btn-sm btn-default theme-changer @(theme == Model.Theme ? "active" : "")"
				        data-theme="@theme" type="button">
					@theme
				</button>
			}
		</div>
	</div>

	<div class="col-lg-9 col-sm-9 text-center">

		<table class="table table-striped table-hover table-responsive">
			<thead>
				<tr>
					<th class="text-center">@Context.Translate("Header")</th>
					<th class="text-center">@Context.Translate("Header")</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="text-center">@Context.Translate("RowPositive")</td>
					<td class="text-center text-info">@(1m.ToMoney(Model.Language))</td>
				</tr>
				<tr>
					<td class="text-center">@Context.Translate("RowTransfer")</td>
					<td class="text-center text-success">@(1m.ToMoney(Model.Language))</td>
				</tr>
				<tr>
					<td class="text-center">@Context.Translate("RowNegative")</td>
					<td class="text-center text-danger">@(1m.ToMoney(Model.Language))</td>
				</tr>
			</tbody>
		</table>

		<div class="form-group well">
			<label class="control-label" for="example">@Context.Translate("Label")</label>
			<input class="form-control" id="example" />
		</div>

		<div class="form-group">
			<button type="button" class="btn btn-success">@Context.Translate("Button")</button>
			<button type="button" class="btn btn-warning">@Context.Translate("Button")</button>
			<button type="button" class="btn btn-danger">@Context.Translate("Button")</button>
		</div>

		<div class="alert alert-info">@Context.Translate("Alert")</div>
		<div class="alert alert-success">@Context.Translate("Alert")</div>
		<div class="alert alert-warning">@Context.Translate("Alert")</div>
		<div class="alert alert-danger">@Context.Translate("Alert")</div>

	</div>

</div>
