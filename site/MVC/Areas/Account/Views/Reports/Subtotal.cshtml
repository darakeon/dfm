@model DFM.MVC.Areas.Account.Models.SubModels.Subtotal

@{
	var hasSign = Model.Sign != AccountSign.NoneLimit;
	var valueClass = hasSign ? "pull-right" : null;
}

<h2>@Context.Translate(Model.Key)</h2>

@if (hasSign)
{
	<span class="pull-left">
		@await Html.PartialAsync("AccountSign", Model.Sign)
	</span>
}

<span class="@valueClass">
	@await Html.PartialAsync("Extensions/ValueWithSign",
		new ValueWithSign(Model.Value, Model.Language)
	)
</span>

<br class="clearfix" />
