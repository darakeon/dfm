@model UsersSignUpModel

@{
	ViewBag.Title = MultiLanguage.Dictionary["SignUp"];
	Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Email, MultiLanguage.Dictionary["Email"], new { @class = "control-label" })
	@Html.TextBoxFor(m => m.Email, new { @class = "form-control", maxlength = MaximumLength.USER_EMAIL })
	<small>@String.Format(MultiLanguage.Dictionary["CharactersMax"], MaximumLength.USER_EMAIL)</small>
</div>

<div class="form-group">
	@Html.LabelFor(m => m.Password, MultiLanguage.Dictionary["Password"], new { @class = "control-label" })
	@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
</div>

<div class="form-group">
	@Html.LabelFor(m => m.RetypePassword, MultiLanguage.Dictionary["RetypePassword"], new { @class = "control-label" })
	@Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control" })
</div>

<div class="text-center form-group">
	@Html.CheckBoxFor(m => m.Accept)
	<span class="control-label">
		@Html.Raw(String.Format(
			Users.ContractAccept, 
			$"<a role='button' data-toggle='modal' data-target='#contract-modal'>{Users.ContractTitle}</a>"
		))
	</span>
	
</div>

<div class="modal fade" id="contract-modal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<span class="modal-title">
					@Users.ContractTitle
				</span>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true" class="glyphicon glyphicon-remove"></span>
				</button>
			</div>
			<div class="modal-body">
				<div class="contract">
					@Html.Partial($"../Contracts/{Model.Contract.Version}")
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>



@section Footer
{
	<button type="submit" class="btn btn-success">
		@MultiLanguage.Dictionary["Create"]
	</button>
}