@model UsersForgotPasswordModel

@{
	ViewBag.Title = MultiLanguage.Dictionary["ForgotPassword"];
	Layout = "~/Views/Shared/_MiniForm.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Email, MultiLanguage.Dictionary["Email"], new { @class = "control-label" })
	@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
</div>

@section Footer
{
	<div class="text-right">
		<button type="submit" class="btn btn-success">
			@MultiLanguage.Dictionary["Send"]
		</button>
	</div>
}
