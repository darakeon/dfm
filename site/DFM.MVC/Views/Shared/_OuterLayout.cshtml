@{
	Layout = "~/Views/Shared/_Master.cshtml";
	var isAuthenticated = Auth.Current.IsAuthenticated;
}

@section HtmlHeadCss {
	@RenderSection("HtmlHeadCss", false)
}

@section HtmlFooterJs {
	@RenderSection("HtmlFooterJs", false)
}



@section MenuTopo {
	@if (isAuthenticated)
	{
		@Html.RouteLink(MultiLanguage.Dictionary["Enter"], RouteNames.DEFAULT, new { action = "Index", controller = "Accounts" })
		@Html.RouteLink(MultiLanguage.Dictionary["LogOff"], RouteNames.DEFAULT, new { action = "LogOff", controller = "Users" })
	}
	else
	{
		@Html.RouteLink(MultiLanguage.Dictionary["Login"], RouteNames.DEFAULT, new { action = "LogOn", controller = "Users" })
		@Html.RouteLink(MultiLanguage.Dictionary["SignUp"], RouteNames.DEFAULT, new { action = "SignUp", controller = "Users" })
		@Html.ActionLink(MultiLanguage.Dictionary["TokenReceivedByEmail"], "Index", "Tokens")
	}
}



@{/* Made without spaces to hide when empty */}
@section TopRightDiv {@RenderSection("TopRightDiv", false)}



@section PS {
	@RenderSection("PS", false)
}



@RenderBody()



