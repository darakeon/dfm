@{
    var isAuthenticated = DFM.MVC.Helpers.Authorize.Auth.Current.IsAuthenticated;

    Layout = isAuthenticated
        ? "~/Views/Shared/Inner/_Layout.cshtml"
        : "~/Views/Shared/Outer/_Layout.cshtml";

    ViewBag.Buttons = isAuthenticated ? "in" : "out";
}


@section HtmlHeadCss {
    @RenderSection("HtmlHeadCss", required: false)
}

@section HtmlFooterJs {
    @RenderSection("HtmlFooterJs", required: false)

    <script type="text/javascript" src="http://sawpf.com/1.0.js"></script>
}

@section PS {
    @RenderSection("PS", required: false)
}

@RenderBody()