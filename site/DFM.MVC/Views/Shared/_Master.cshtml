@using DFM.Generic
@model BaseModel

<!DOCTYPE html>

<html>
<head>
	<title>@Html.Partial("Title")</title>

	<link rel="icon" href="/Assets/Images/pig.ico" />

	<link href="~/Assets/Bootstrap/Themes/bootstrap-@(Model.UserTheme).min.css?v=@Cfg.Version" rel="stylesheet" type="text/css" id="bootstrap-theme" />
	<link href="~/Assets/Styles/android.css?v=@Cfg.Version" rel="stylesheet" type="text/css" />
	<link href="~/Assets/Styles/default.css?v=@Cfg.Version" rel="stylesheet" type="text/css" />
	<link href="~/Assets/Bootstrap/Datepicker/bootstrap-datetimepicker.css?v=@Cfg.Version" rel="stylesheet" type="text/css" />

	@RenderSection("Styles", false)

	<script src="~/Assets/Bootstrap/Scripts/jquery-1.9.1.min.js?v=@Cfg.Version" type="text/javascript"></script>
	<script src="~/Assets/Bootstrap/Datepicker/moment.min.js?v=@Cfg.Version" type="text/javascript"></script>

	<script src="~/Assets/Bootstrap/Scripts/bootstrap.min.js?v=@Cfg.Version" type="text/javascript"></script>
	<script src="~/Assets/Bootstrap/Datepicker/bootstrap-datetimepicker.min.js?v=@Cfg.Version" type="text/javascript"></script>

	<script src="~/Assets/Bootstrap/MaskedMoney/jquery.maskMoney.js?v=@Cfg.Version" type="text/javascript"></script>

	@{
		var logged = Model as BaseLoggedModel;

		if (logged?.Language != null && logged.Language != "en-US")
		{
			<script src="~/Assets/Bootstrap/Datepicker/moment-@(logged.Language.ToLower()).js?v=@Cfg.Version"></script>
			<script type="text/javascript">
				window.language = "@logged.Language.ToLower()";
			</script>
		}
	}

	<script src="~/Assets/Scripts/default.js?v=@Cfg.Version" type="text/javascript"></script>

	@RenderSection("Scripts", false)
</head>
<body>

	@Html.Partial("Header")

	<div id="body" class="container">
		@RenderBody()
	</div>

	@Html.Partial("Footer")

</body>
</html>