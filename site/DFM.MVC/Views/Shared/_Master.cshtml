@using DFM.MVC.Areas.Account.Models
@model BaseModel

@{
	var accountModel = Model as BaseAccountModel;

	var title = new List<String>();

	if (ViewBag.Title == null)
	{
		title.Add("Don't fly Money");
	}
	else
	{
		title.Add("DfM");

		if (accountModel != null)
		{
			title.Add(accountModel.Account.Name.ToUpper());
		}

		title.Add(ViewBag.Title);
	}
}

<!DOCTYPE html>

<html>
<head>
	<title>@String.Join(" - ", title)</title>

	<link rel="icon" href="/Assets/Images/pig.ico" />

	<link href="/Assets/Bootstrap/Themes/bootstrap-@(Model.Theme).min.css" rel="stylesheet" type="text/css" />
	<link href="/Assets/Styles/android.css" rel="stylesheet" type="text/css" />
	<link href="/Assets/Styles/default.css" rel="stylesheet" type="text/css" />

	@RenderSection("Styles", false)

	<script src="/Assets/Bootstrap/Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
	<script src="/Assets/Bootstrap/Scripts/bootstrap.min.js" type="text/javascript"></script>
	<script src="/Assets/Scripts/default.js" type="text/javascript"></script>

	@RenderSection("Scripts", false)
</head>
<body>

	@Html.Partial("Header")

	<div id="body" class="container">
		@RenderBody()
	</div>

	@Html.Partial("Footer")

</body>
</html>