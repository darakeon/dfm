@model DFM.MVC.Models.AccountIndexModel

@{
    ViewBag.Title = MultiLanguage.Dictionary["ClosedAccounts"];
    Layout = "~/Views/Shared/Inner/_Layout.cshtml";
}

@if (!Model.AccountList.Any())
{ 
    <div class="ZeroItems">@MultiLanguage.Dictionary["NoClosedAccounts"]</div>
}
else
{ 
        
    <table class="List">

        <tr>
            <th>@MultiLanguage.Dictionary["Name"]</th>
            <th>@MultiLanguage.Dictionary["BeginDate"]</th>
            <th>@MultiLanguage.Dictionary["EndDate"]</th>
            <th>@MultiLanguage.Dictionary["Value"]</th>
            <th colspan="2">@MultiLanguage.Dictionary["GOTO"]</th>
        </tr>

        @foreach (var account in Model.AccountList)
        {
            var language = account.User.Language;

            var endMonth = account.EndDate.Value.Month;
            var endYear = account.EndDate.Value.Year;
            var monthReportId = endYear * 100 + endMonth;

            
            var movesSum = account.Sum();
            var negative = movesSum < 0;
            var value = (negative ? -movesSum : movesSum).ToMoney(language);

            var sign = account.Sign();
                    

            var monthLabel = String.Format(MultiLanguage.Dictionary["MonthMoves"] + " ({1})", MultiLanguage.GetMonthName(endMonth), endYear);
            var monthUrl = Url.RouteUrl(RouteNames.Accounts, new { action = "ShowMoves", controller = "Report", accounturl = account.Url, id = monthReportId });
                    
            var yearLabel = String.Format(MultiLanguage.Dictionary["YearMoves"], account.EndDate.Value.Year);
            var yearUrl = Url.RouteUrl(RouteNames.Accounts, new { action = "SummarizeMonths", controller = "Report", accounturl = account.Url, id = endYear });
                        
            <tr>
                <td>@account.Name </td>
                <td>@account.BeginDate.ToShortDateString() </td>
                <td>@account.EndDate.Value.ToShortDateString() </td>

                <td class="numeric @(negative ? "out" : "in")">@value</td>

                <td class="image"><a href="@monthUrl"><img src="/Assets/image/month.gif" alt="@monthLabel" title="@monthLabel" /></a></td>
                <td class="image"><a href="@yearUrl"><img src="/Assets/image/year.gif" alt="@yearLabel" title="@yearLabel" /></a></td>
            </tr>

        } 

    </table>
} 
