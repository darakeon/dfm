@model TokensPasswordResetModel

@{
	ViewBag.Title = Translator.Dictionary["PasswordReset"];
	Layout = "~/Views/Shared/_Form.cshtml";
}

<div class="form-group">
	@Html.LabelFor(m => m.Password, Translator.Dictionary["Password"], new { @class = "control-label" })
	@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
</div>

<div class="form-group">
	@Html.LabelFor(m => m.RetypePassword, Translator.Dictionary["RetypePassword"], new { @class = "control-label" })
	@Html.PasswordFor(m => m.RetypePassword, new { @class = "form-control" })
</div>

@section Footer {
	<button type="submit" class="btn btn-success">
		@Translator.Dictionary["Reset"]
	</button>
}
