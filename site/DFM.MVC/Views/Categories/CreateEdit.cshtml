@using DFM.Generic
@model CategoriesCreateEditModel

@{
    if (Model.IsMoveCRUD) { Model.ActionName = "Create"; }
    
    ViewBag.Title = MultiLanguage.Dictionary[Model.ActionName, "Category"];

    if (Model.Type == OperationType.Edit)
    {
        ViewBag.Title += " " + Model.Name;
    }
    
    Layout = Model.IsMoveCRUD ? null : "~/Views/Shared/_NoAreaLayout.cshtml";
}

<div class="half-screen CRUDCategory">

    @using (
            Model.IsMoveCRUD
                ? Ajax.BeginForm("CreateAjax", "Categories", new AjaxOptionsDFM { OnSuccess = "InsertCategoryOnDropDown" })
                : Html.BeginForm()
        )
    {
        <p>
            @Html.LabelFor(m => m.Name, MultiLanguage.Dictionary["Category"])
            @Html.TextBoxFor(m => m.Name, new { maxlength = MaximumLength.CATEGORY_NAME })
            @Html.ValidationMessageFor(m => m.Name)
            <span class='input-ps'>@String.Format(MultiLanguage.Dictionary["CharactersMax"], MaximumLength.CATEGORY_NAME)</span>
        </p>
    
        <button type="submit">@MultiLanguage.Dictionary[Model.ActionName]!</button>
    }
</div>