@model BaseAccountModel

@{
	var value = Model.Account.Total();
	var negative = value < 0;
	var signClass = negative ? "danger" : "info";

	value *= negative ? -1 : 1;
	var valueToShow = value.ToMoney(Model.Language);
}

<div class="well well-sm text-center">
	<h6>@MultiLanguage.Dictionary["Total"]</h6>
	<span class="text-@signClass">
		@valueToShow
	</span>
</div>
