<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.darakeon.dfm"
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:installLocation="auto"
		  android:versionCode="002001004004"
		  android:versionName="2.1.4.4">

	<uses-sdk
		android:maxSdkVersion="25"/>

	<uses-permission
		android:name="android.permission.INTERNET"
		android:protectionLevel="signature"/>
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE"
		android:protectionLevel="signature"/>
	<uses-permission
		android:name="com.android.vending.CHECK_LICENSE"
		android:protectionLevel="signature"/>
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"
		android:protectionLevel="signature"/>
	<uses-permission
		android:name="android.permission.READ_PHONE_STATE"
		android:protectionLevel="signature"/>
	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"
		android:protectionLevel="signature"/>

	<uses-feature
		android:name="android.hardware.faketouch"
		android:required="true"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity android:name=".activities.WelcomeActivity"
				  android:label="@string/app_name"
				  android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.LoginActivity"
			android:label="@string/login">
		</activity>
		<activity
			android:name=".activities.AccountsActivity"
			android:label="@string/title_activity_accounts">
		</activity>
		<activity
			android:name=".activities.ExtractActivity"
			android:label="@string/title_activity_extract">
		</activity>
		<activity
			android:name=".activities.SummaryActivity"
			android:label="@string/title_activity_summary">
		</activity>
		<activity
			android:name=".activities.MovesCreateActivity"
			android:label="@string/title_activity_move">
		</activity>
		<activity
			android:name=".activities.SettingsActivity"
			android:label="@string/title_activity_settings">
		</activity>
	</application>

</manifest>