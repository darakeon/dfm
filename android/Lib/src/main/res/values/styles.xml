<resources>
	<style name="Material" parent="android:Theme.Material">
		<item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:windowBackground">?attr/background</item>
		<item name="android:textColor">?attr/main</item>
		<item name="android:textColorPrimary">?attr/main</item>
		<item name="android:textColorHint">?attr/placeholder</item>
		<item name="android:colorControlActivated">?attr/link</item>
		<item name="android:buttonStyle">@style/Button</item>
		<item name="android:buttonStyleToggle">@style/ToggleButton</item>
		<item name="android:alertDialogStyle">@style/Dialog</item>
		<item name="android:alertDialogTheme">@style/Dialog</item>

		<item name="negative">?attr/danger</item>
		<item name="positive">?attr/info</item>
		<item name="zero">?attr/success</item>
		<item name="transfer">?attr/success</item>

		<item name="checked">?attr/success</item>
		<item name="unchecked">?attr/danger</item>

		<item name="background">?attr/neutral_0</item>
		<item name="background_highlight">?attr/neutral_1</item>
		<item name="background_button">?attr/average</item>

		<item name="main">?attr/light</item>
		<item name="main_highlight">?attr/average</item>
		<item name="placeholder">?attr/heavy</item>
		<item name="link">?attr/emphasis</item>
	</style>

	<style name="Dark" parent="Material">
		<item name="danger">@color/dark_danger_1</item>
		<item name="success">@color/dark_success_1</item>
		<item name="info">@color/dark_info_1</item>
		<item name="neutral_0">@color/dark_neutral_0</item>
		<item name="neutral_1">@color/dark_neutral_1</item>
	</style>
	<style name="DarkMagic" parent="Dark">
		<item name="light">@color/dark_magic_primary_0</item>
		<item name="average">@color/dark_magic_primary_2</item>
		<item name="heavy">@color/dark_magic_primary_3</item>
		<item name="emphasis">@color/dark_magic_highlight_1</item>
	</style>
	<style name="DarkSober" parent="Dark">
		<item name="light">@color/dark_sober_primary_0</item>
		<item name="average">@color/dark_sober_primary_2</item>
		<item name="heavy">@color/dark_sober_primary_3</item>
		<item name="emphasis">@color/dark_sober_highlight_1</item>
	</style>
	<style name="DarkNature" parent="Dark">
		<item name="light">@color/dark_nature_primary_0</item>
		<item name="average">@color/dark_nature_primary_2</item>
		<item name="heavy">@color/dark_nature_primary_3</item>
		<item name="emphasis">@color/dark_nature_highlight_1</item>
	</style>

	<style name="Light" parent="Material">
		<item name="danger">@color/light_danger_1</item>
		<item name="success">@color/light_success_1</item>
		<item name="info">@color/light_info_1</item>
		<item name="neutral_0">@color/light_neutral_0</item>
		<item name="neutral_1">@color/light_neutral_1</item>
	</style>
	<style name="LightMagic" parent="Light">
		<item name="light">@color/light_magic_primary_0</item>
		<item name="average">@color/light_magic_primary_2</item>
		<item name="heavy">@color/light_magic_primary_3</item>
		<item name="emphasis">@color/light_magic_highlight_1</item>
	</style>
	<style name="LightSober" parent="Light">
		<item name="light">@color/light_sober_primary_0</item>
		<item name="average">@color/light_sober_primary_2</item>
		<item name="heavy">@color/light_sober_primary_3</item>
		<item name="emphasis">@color/light_sober_highlight_1</item>
	</style>
	<style name="LightNature" parent="Light">
		<item name="light">@color/light_nature_primary_0</item>
		<item name="average">@color/light_nature_primary_2</item>
		<item name="heavy">@color/light_nature_primary_3</item>
		<item name="emphasis">@color/light_nature_highlight_1</item>
	</style>

	<style name="Button" parent="android:style/Widget.Material.Button">
		<item name="android:textColor">?attr/neutral_0</item>
		<item name="android:background">@drawable/button</item>
		<item name="android:padding">10sp</item>
	</style>
	<style name="ToggleButton" parent="Button">
		<item name="android:textColor">?attr/average</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textAllCaps">false</item>
	</style>
	<style name="Link" parent="android:style/Widget.Material.Button">
		<item name="android:textColor">?attr/link</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:padding">0dp</item>
	</style>

	<style name="ActionBar" parent="android:style/Widget.Material.ActionBar">
		<item name="android:background">?attr/main</item>
		<item name="android:titleTextStyle">@style/TitleBar</item>
	</style>

	<style name="TitleBar" parent="android:style/TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:textColor">?attr/background</item>
	</style>

	<style name="Dialog" parent="android:style/Theme.Material.Dialog">
		<item name="android:textColor">?attr/link</item>
		<item name="android:textColorPrimary">?attr/main</item>
		<item name="android:textColorSecondary">?attr/link</item>
		<item name="android:textColorAlertDialogListItem">?attr/main</item>
		<item name="android:background">?attr/background</item>
		<item name="android:buttonBarButtonStyle">@style/Button</item>
		<item name="android:colorAccent">?attr/link</item>
		<item name="android:textColorPrimaryInverse">?attr/background</item>
	</style>
	<style name="DateSpinner" parent="Dialog">
		<item name="android:datePickerStyle">@style/DatePickerSpinner</item>
	</style>
	<style name="DatePickerSpinner" parent="android:style/Widget.Material.DatePicker">
		<item name="android:datePickerMode">spinner</item>
	</style>
	<style name="DateCalendar" parent="Dialog">
		<item name="android:datePickerStyle">@style/DatePickerCalendar</item>
	</style>
	<style name="DatePickerCalendar" parent="android:style/Widget.Material.DatePicker">
		<item name="android:datePickerMode">calendar</item>
	</style>

	<style name="Test" parent="Material">
		<item name="main">@color/pig</item>

		<item name="negative">@android:color/holo_red_dark</item>
		<item name="positive">@android:color/holo_blue_dark</item>
		<item name="zero">@android:color/holo_green_light</item>
		<item name="transfer">@android:color/holo_green_dark</item>
		<item name="checked">@android:color/holo_blue_light</item>
		<item name="unchecked">@android:color/holo_red_light</item>
		<item name="background_highlight">@android:color/holo_orange_dark</item>
		<item name="link">@android:color/holo_orange_light</item>
		<item name="placeholder">@android:color/darker_gray</item>
	</style>
</resources>
