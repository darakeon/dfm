<resources>
	<style name="Material" parent="android:Theme.Material">
		<item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:windowBackground">?attr/background</item>
		<item name="android:textColor">?attr/primary</item>
		<item name="android:textColorPrimary">?attr/primary</item>
		<item name="android:textColorHint">?attr/placeholder</item>
		<item name="android:colorControlActivated">?attr/link</item>
		<item name="android:buttonStyle">@style/Button</item>
		<item name="android:buttonStyleToggle">@style/Button</item>
		<item name="android:alertDialogStyle">@style/Dialog</item>
		<item name="android:alertDialogTheme">@style/Dialog</item>
	</style>

	<style name="Dark" parent="Material">
		<item name="neutral">@color/dark_neutral_2</item>
		<item name="negative">@color/dark_danger_1</item>
		<item name="positive">@color/dark_info_1</item>
		<item name="zero">@color/dark_success_1</item>
		<item name="transfer">@color/dark_success_1</item>
		<item name="checked">@color/dark_success_1</item>
		<item name="unchecked">@color/dark_danger_1</item>
		<item name="highlight">@color/dark_neutral_1</item>
		<item name="background">@color/dark_neutral_0</item>
	</style>
	<style name="DarkMagic" parent="Dark">
		<item name="primary">@color/dark_magic_primary_0</item>
		<item name="placeholder">@color/dark_magic_primary_3</item>
		<item name="link">@color/dark_magic_highlight_1</item>
		<item name="logo">@color/dark_magic_primary_2</item>
	</style>
	<style name="DarkSober" parent="Dark">
		<item name="primary">@color/dark_sober_primary_0</item>
		<item name="placeholder">@color/dark_sober_primary_3</item>
		<item name="link">@color/dark_sober_highlight_1</item>
		<item name="logo">@color/dark_sober_primary_2</item>
	</style>
	<style name="DarkNature" parent="Dark">
		<item name="primary">@color/dark_nature_primary_0</item>
		<item name="placeholder">@color/dark_nature_primary_3</item>
		<item name="link">@color/dark_nature_highlight_1</item>
		<item name="logo">@color/dark_nature_primary_2</item>
	</style>

	<style name="Light" parent="Material">
		<item name="neutral">@color/light_neutral_2</item>
		<item name="negative">@color/light_danger_1</item>
		<item name="positive">@color/light_info_1</item>
		<item name="zero">@color/light_success_1</item>
		<item name="transfer">@color/light_success_1</item>
		<item name="checked">@color/light_success_1</item>
		<item name="unchecked">@color/light_danger_1</item>
		<item name="highlight">@color/light_neutral_1</item>
		<item name="background">@color/light_neutral_0</item>
	</style>
	<style name="LightMagic" parent="Light">
		<item name="primary">@color/light_magic_primary_0</item>
		<item name="placeholder">@color/light_magic_primary_3</item>
		<item name="link">@color/light_magic_highlight_1</item>
		<item name="logo">@color/light_magic_primary_2</item>
	</style>
	<style name="LightSober" parent="Light">
		<item name="primary">@color/light_sober_primary_0</item>
		<item name="placeholder">@color/light_sober_primary_3</item>
		<item name="link">@color/light_sober_highlight_1</item>
		<item name="logo">@color/light_sober_primary_2</item>
	</style>
	<style name="LightNature" parent="Light">
		<item name="primary">@color/light_nature_primary_0</item>
		<item name="placeholder">@color/light_nature_primary_3</item>
		<item name="link">@color/light_nature_highlight_1</item>
		<item name="logo">@color/light_nature_primary_2</item>
	</style>

	<style name="Button" parent="android:style/Widget.Material.Button">
		<item name="android:textColor">?attr/link</item>
		<item name="android:background">@drawable/button</item>
		<item name="android:padding">10sp</item>
	</style>

	<style name="ActionBar" parent="android:style/Widget.Material.ActionBar">
		<item name="android:background">?attr/primary</item>
		<item name="android:titleTextStyle">@style/TitleBar</item>
	</style>

	<style name="TitleBar" parent="android:style/TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:textColor">?attr/neutral</item>
	</style>

	<style name="Dialog" parent="android:style/Theme.Material.Dialog">
		<item name="android:textColor">?attr/link</item>
		<item name="android:textColorPrimary">?attr/primary</item>
		<item name="android:textColorSecondary">?attr/link</item>
		<item name="android:textColorAlertDialogListItem">?attr/primary</item>
		<item name="android:background">?attr/background</item>
		<item name="android:buttonBarButtonStyle">@style/Button</item>
		<item name="android:colorAccent">?attr/link</item>
	</style>
	<style name="DateSpinner" parent="Dialog">
		<item name="android:datePickerStyle">@style/DatePickerSpinner</item>
	</style>
	<style name="DatePickerSpinner" parent="android:style/Widget.Material.DatePicker">
		<item name="android:datePickerMode">spinner</item>
	</style>
	<style name="DateCalendar" parent="Dialog">
		<item name="android:datePickerStyle">@style/DatePickerCalendar</item>
	</style>
	<style name="DatePickerCalendar" parent="android:style/Widget.Material.DatePicker">
		<item name="android:datePickerMode">calendar</item>
	</style>

	<style name="Test" parent="Material">
		<item name="primary">@color/pig</item>

		<item name="neutral">@android:color/black</item>
		<item name="negative">@android:color/holo_red_dark</item>
		<item name="positive">@android:color/holo_blue_dark</item>
		<item name="zero">@android:color/holo_green_light</item>
		<item name="transfer">@android:color/holo_green_dark</item>
		<item name="checked">@android:color/holo_blue_light</item>
		<item name="unchecked">@android:color/holo_red_light</item>
		<item name="highlight">@android:color/holo_orange_dark</item>
		<item name="link">@android:color/holo_orange_light</item>
		<item name="placeholder">@android:color/darker_gray</item>
		<item name="logo">@android:color/white</item>
	</style>
</resources>
