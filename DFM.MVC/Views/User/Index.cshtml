@model DFM.MVC.Models.UserIndexModel

@{
    ViewBag.Title = "Bem-vindo!";
    Layout = "~/Views/Shared/Outer/_Layout.cshtml";
}

@section BeforeTitle { 
    <div id="Login">
        @Html.Partial("LogOn", new DFM.MVC.Models.UserLogOnModel())
    </div>
}

<p>
    @PlainText.Dictionary["Index_Introdution"]
</p>

<p>
    @PlainText.Dictionary["Index_PossibleNowADays"]
</p>
			
<ul>
	<li>@String.Format(PlainText.Dictionary["Index_AccountAndTypes"], Model.TypeAmount, Model.Types)</li>
	<li>@PlainText.Dictionary["Index_Moves"]</li>
	<li>@PlainText.Dictionary["Index_Transfer"]</li>
	<li>@PlainText.Dictionary["Index_Categories"]</li>
</ul>

<p>
	@PlainText.Dictionary["Index_Reports"]
</p>
			
<ul>
	<li>@PlainText.Dictionary["Index_ReportMonth"]</li>
	<li>@PlainText.Dictionary["Index_ReportYear"]</li>
</ul>
			
<p>
	@PlainText.Dictionary["Index_Close"]
</p>
			
<p>
	@Html.ActionLink(PlainText.Dictionary["Index_Finish"], "SignUp")
</p>