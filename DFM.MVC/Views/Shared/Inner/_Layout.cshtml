@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
    <title>DFM - @ViewBag.Title</title>

    <link href="@Url.Content("~/Assets/Css/MVC.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/General.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/MiniForm.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/LinkButton.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/Forms.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/Menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/Table.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/Css/SystemIn.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Assets/Script/Libraries/jquery-1.6.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/Script/Libraries/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/Script/Libraries/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/Script/Libraries/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Assets/Script/Libraries/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/Script/Libraries/jquery.maskMoney.0.2.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Assets/Script/AllPages.js")" type="text/javascript"></script>

    @RenderSection("HtmlHead", required: false)
</head>
<body>
	<div id="Head">
        <a href="@Url.RouteUrl(RouteNames.Default, new { action = "LogOff", controller = "User" })">
            <img id="Out" alt="DFM" src="@Url.Content("~/Assets/Image/sair.gif")"
                onmouseover="this.src='@Url.Content("~/Assets/Image/sair_on.gif")'"
                onmouseout="this.src='@Url.Content("~/Assets/Image/sair.gif")'" />
        </a>

		<img id="Logo" alt="DFM" src="@Url.Content("~/Assets/Image/DFM.gif")" />
	</div>

    @{ Html.RenderPartial("Inner/Menu"); }

    <div id='Main'>
        @RenderSection("BeforeTitle", required: false)

        <h2>@ViewBag.Title</h2>

        @RenderBody()
    </div>
</body>
</html>