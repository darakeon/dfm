@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HtmlHeadCss {
    <link href="@Url.Content("~/Assets/Css/SystemOut.css")" rel="stylesheet" type="text/css" />

    @RenderSection("HtmlHeadCss", required: false)
}

@section HtmlHeadJs {
    @RenderSection("HtmlHeadJs", required: false)
}

@section LogOut {
    <img id="Out" alt="DFM" src="@Url.Content("~/Assets/Image/off_out.gif")"
        onmouseover="this.src='@Url.Content("~/Assets/Image/off_out_hover.gif")'"
        onmouseout="this.src='@Url.Content("~/Assets/Image/off_out.gif")'" />
}

@section Logo {
    <img alt="DFM" src="@Url.Content("~/Assets/Image/logo_out.gif")" />
}

@{/* Made without spaces to hide when empty */}
@section TopRightDiv {@RenderSection("TopRightDiv", required: false)}

@RenderBody()