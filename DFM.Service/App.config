        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8732/Design_Time_Addresses/Service/Service1/" />
          </baseAddresses>
        </host>
      </service>

      <service name="DFM.Service.DetailService">
        <endpoint address="" binding="wsHttpBinding" contract="DFM.Service.IDetailService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
